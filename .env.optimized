# Application Environment Configuration
# Copy this to .env and adjust values according to your environment

APP_NAME="Optimized Laravel App"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=http://localhost

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_database
DB_USERNAME=your_username
DB_PASSWORD=your_password
# Optimize database connections
DB_POOL_SIZE=10
DB_QUERY_TIMEOUT=30
DB_SLOW_QUERY_THRESHOLD=2000

# Cache Configuration (Redis recommended for production)
CACHE_STORE=redis
CACHE_PREFIX=app_cache

# Session Configuration (Redis recommended for production)
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Queue Configuration (Redis/Database recommended for production)
QUEUE_CONNECTION=redis
QUEUE_DEFAULT=default
QUEUE_EMAIL=emails
QUEUE_BULK_EMAIL=bulk-emails
QUEUE_HIGH_PRIORITY=high
QUEUE_WORKER_TIMEOUT=60
QUEUE_WORKER_SLEEP=3
QUEUE_WORKER_TRIES=3
QUEUE_FAILED_CLEANUP_DAYS=7

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_CLIENT=phpredis

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Mail Performance Settings
MAIL_QUEUE_EMAILS=true
MAIL_BATCH_SIZE=50
MAIL_RATE_LIMIT=100
MAIL_RETRY_ATTEMPTS=3
MAIL_RETRY_DELAY=60

# Logging Configuration
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error
LOG_ROTATION=true
LOG_MAX_FILES=5
LOG_QUERIES=false
LOG_SLOW_REQUESTS=true
SLOW_REQUEST_THRESHOLD=1000

# Performance Configuration
QUERY_CACHE_TTL=3600
VIEW_CACHE_ENABLED=true
ROUTE_CACHE_ENABLED=true
CONFIG_CACHE_ENABLED=true

# Asset Optimization
ASSET_COMPRESSION=true
ASSET_MINIFICATION=true
ASSET_CACHE_BUSTING=true
ASSET_LAZY_LOADING=true
IMAGE_OPTIMIZATION=true
WEBP_CONVERSION=true

# Response Optimization
RESPONSE_GZIP=true
RESPONSE_ETAG=true
RESPONSE_CACHE_HEADERS=true
BROWSER_CACHE_TTL=86400

# Memory and Execution Limits
MEMORY_LIMIT=256M
MAX_EXECUTION_TIME=60
ENABLE_GARBAGE_COLLECTION=true
OPCACHE_ENABLED=true

# Session Optimization
SESSION_OPTIMIZE_STORAGE=true
SESSION_GC_PROBABILITY=1
SESSION_GC_DIVISOR=100
SESSION_GC_MAXLIFETIME=1440

# Broadcasting (if using WebSockets)
BROADCAST_CONNECTION=log
BROADCAST_DRIVER=log

# Filesystem Configuration
FILESYSTEM_DISK=local

# AWS Configuration (if using S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"

# Additional Security Headers
SECURE_HEADERS=true
HSTS_ENABLED=true
CSP_ENABLED=true

# Monitoring and Analytics
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true

# CDN Configuration (optional)
CDN_URL=
CDN_ENABLED=false

# Database Query Optimization
DB_STRICT_MODE=false
DB_ENGINE=InnoDB